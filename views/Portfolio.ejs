  <div class="">
      <% function recursion(response) {%>
        <%for (let key in response) { %>
          <%  if (typeof(response[key]) == 'object' ) { if (key.match(/^Portfolio/)) { %>
            <div id="IamBlock">
              <table class="table"> 
                <thead>
                  <tr style="width: 100%;" >
                    <th colspan="2"><%= key %></th>
                  </tr>
                </thead>
                <tbody>
                <% } }%>      
          <% if (typeof(response[key]) == 'object'   ) { recursion(response[key]); } else { %>
                  <tr>
                    <td>
                      <%= key %>
                     
                    </td> 
                    <td class="justify-content-end pr-5">
                      <%= response[key]  %> 
                     
                    </td>
                   </tr>
                   
                <%}%>
              
                     
        <% }%>
      </tbody>
      </table> 
      </div> 
      <% }%>
    <% recursion(response) %>
  </div>
